<table border="1">
    <tr>
        <td>ID</td>
        <td>Titulo</td>
        <td>Descrição</td>
        <th>Ações</th>
    </tr>
    {{#each jogos}}
    <tr>
        <td>{{this.id}}</td>
        <td>{{this.titulo}}</td>
        <td>{{this.descricao}}</td>
        <td>
            <a href="/jogos/{{this.id}}/update">Atualizar</a>
            <form action="/jogos/deletar" method="post">
                <input name="id" type="hidden" value="{{this.id}}" />
                <input type="submit" value="deletar">
            </form>
            <a href="/jogos/{{this.id}}/conquistas">Ver conquistas</a>
        </td>
    </tr>
    {{/each}}
</table>
   <a href="/jogos/novo">Cadastrar Jogos</a>